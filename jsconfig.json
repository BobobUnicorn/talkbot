{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@config": [
        "config/*"
      ],
      "@src": [
        "src/*"
      ],
      "@helpers": [
        "src/helpers/*"
      ],
      "@commands": [
        "src/commands/*"
      ],
      "@models": [
        "src/models/*"
      ],
      "@services": [
        "src/services/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
